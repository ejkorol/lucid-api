{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/decs.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./types/decs.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}
